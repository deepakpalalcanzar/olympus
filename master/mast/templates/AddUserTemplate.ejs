<!-- settings content -->
	<div class="main-mod ent-form-cont" id="main-mod"> 
		<!-- company details section -->
		<form action="/account/register" method="POST" class="new-user-form">

			<div class="center-mod">
				<h3 class="company-details">New user</h3>

				<div class="userFirstName">
					<div class="company-name">First Name</div>
					<input type="text" name="first_name" placeholder="Enter First Name" class="new-user-fields user-first-name">
				</div>	


				<div class="userLastName">
					<div class="company-name">Last Name</div>
					<input type="text" name="last_name" placeholder="Enter Last Name" class="new-user-fields user-last-name"> 
				</div>	

				<div class="userEmail">
					<div class="company-name">Email</div>
					<input type="text" name="email" placeholder="Enter Email" class="new-user-fields user-email">
				</div>	

				{% if (!superadmin) { %}
					<div class="userWorkgroup">
						<div class="company-name">WorkGroup Name</div>
						<select name="workgroup" id="list_workgroup" class='new-user-select user-workgroup'></select>
					</div>	

					<div class="userRole">
						<div class="company-name">Role</div>
						<select name="role" class="new-user-select user-role">
							<option value="">Select Role</option>
							<option value="admin">Is Admin</option>
							<option value="write">Can Edit</option>
							<option value="comment">Can Comment</option>
						</select>	
					</div>	

				{% } %}	
				
				<div class="userPassword">
					<div class="company-name"> Password </div>
					<input type="password" name="password" placeholder="Enter Password" class="new-user-fields user-password">
				</div>	

				<div class="userConfirmPassword">
					<div class="company-name"> Confirm Password </div>
					<input type="password" name="c_password" placeholder="Confirm Password" class="new-user-fields user-confirm-password">
				</div>

				<div class="userTitle">
					<div class="company-name"> Title </div>
					<input type="text" name="title" placeholder="Enter Title" class="new-user-fields user-title">
				</div>	

				<div class="userSubscripton">
					<div class="company-name"> Subscription</div>
					<select id="subscription-drop" name="subscription" class="new-user-select user-subscription"></select>
					<div class="clear"></div>
				</div>	
			</div>  
		</form>
		<div class="clear"></div> 
	</div> 

	<!-- save button -->
	<div class="footer-mod ent-form-cont">
		<a class="setting-save-button">
			<img src="/images/button_save@2x.png" />
		</a>
	</div>

	<div class="footer-mod add-subs-cont">
		<div class="company-name"> No subscription added yet. Please add
			subscription plan.
			<a href="#addsubscription" class="add-subscription">
			Add Subscription
		</a>
		</div>
	</div>

</div>










