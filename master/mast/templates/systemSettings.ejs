	<!--Code Update Settings -->
	<div class="update-mod">

		<label> Github Oraganization/Project: </label>
		<input id="git-organization" type="text" name="git-organization" value="Olympus-io" placeholder="Enter Github Oraganization/Project (ex. Olympus-io)" /><br>

		<label> Github Repository Name: </label>
		<input id="git-repo" type="text" name="git-repo" value="olympus-web" placeholder="Enter Github Repository Name" /><br>

		<label> Github Username: </label>
		<input id="git-username" type="text" name="git-username" value="" placeholder="Enter Github Username" /><br>

		<label> Github Password: </label>
		<input type="password" id="git-password" name="git-password" value="" placeholder="Enter Github Password" /><br>
		
	    <input type="button" id="checkforupdates" value="Click Here to check any updates">

	    <input type="button" class="restart-server" value="Restart Server">
	    
		<br><br>
	</div>
