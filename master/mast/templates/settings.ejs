	<hr><br>

	<!-- settings content -->
	<div class="main-mod" id="main-mod"> 
		<!-- company details section -->
		<div class="left-mod">
			<div class="container">
			
				<div class="imageBox" style="background-image: url({{ Mast.Socket.baseurl }}/images/icon_profilePicture_default@2x.png); background-size: 100% 100%; background-position: 0px 0px; background-repeat: no-repeat;">
        			<div class="thumbBox"></div>
    			</div>

			    <div class="action">
			        <input type="button" id="btnCrop" value="Save" style="float: right" onClick="cropImage()" >
			        <input type="button" id="btnZoomIn" value="+" style="float: right; padding:0px 16px 2px 14px;" onclick="zoomIn()">
			        <input type="button" id="btnZoomOut" value="-" style="float: right;padding:0px 16px 2px 14px;" onclick="zoomOut()">
			    </div>
			  	  <!-- <div class="cropped"></div> -->
			</div>

			<!-- <h3 class="company-details">Company Details</h3>
