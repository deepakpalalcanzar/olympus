        <%- rigging.css %>

        <%- rigging.js %>
        <script type="text/javascript" src="/js/moment.js"></script>
        <script type="text/javascript" src="/js/fillout.js"></script>
        <script type="text/javascript" src="/js/jquery.imagesloaded.min.js"></script>
        <script type="text/javascript" src="/js/cropbox.js"></script>
        <script src="js/colpick.js" type="text/javascript"></script>        

        <!-- Good ol' css -->
        <link rel="stylesheet" type="text/css" media="all" href="/stylesheets/reset.css"/>
        <link rel="stylesheet" type="text/css" media="all" href="/stylesheets/layout.css"/>
        <link rel="stylesheet" type="text/css" media="all" href="/stylesheets/style.css"/>
        <link rel="stylesheet" href="stylesheets/colpick.css" type="text/css"/>

        <!-- Apple web capable -->
        <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0" />
        <meta name="apple-mobile-web-app-capable" content="yes" />

        <!-- <meta content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" /> -->
    </head>
    <body style="color:<%= font_color %>;font-family:<%= font_family %>">

        <!-- main content -->
        <div class="wrapper portal-only">
            <!-- top section with navigation and search -->
            <% if(header_color !== 'undefined') { %>
            <div id="topbar" style="background-color:<%= header_color %>">
                <% }else{ %>
                <div id="topbar">
                    <% } %> 
                    <div id="top-nav" class="clearfix">

                        <!-- logo and main navigation -->
                        <div id="main-nav">

                            <% if(enterprise_logo != '' && enterprise_logo != null){ %>
                            <a href="#" class="logo-link"><img class="main-logo" src="/images/enterprises/<%= enterprise_logo %>" alt="Olympus" /></a>
                            <% }else{ %>
                            <a href="#" class="logo-link"><img class="main-logo" src="/images/Branding_12.png" alt="Olympus" /></a>
                            <%  } %>
                        </div>

                        <!-- user navigaton outlet -->
                        <div id="user-nav-outlet" class="user-nav-outlet" <% if(email=='ANONYMOUS'){ %>style="display:none;"<% }%>>
                            <div class="user-nav-template clearfix">
                                <a class="user-avatar-link">
                                    <img src="/images/39.png" class="user-avatar" />
                                    <!-- <img src="/account/avatar" class="user-avatar" /> -->
                                </a>
                                <div class="name-container">
                                    <span class="user-name">Hi,
                                        <a class="user-name-link" href="javascript:void(0);">
                                            <%- username %>
                                        </a>
                                    </span>
                                    <!-- put this back when we are ready for it -->
                                    <!-- <div class="dropdown-button"></div> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

        <div style="float:right;padding:15px 37px 0px 0px;<% if(email=='ANONYMOUS'){ %>display:none;<% }%>">
            <!-- <span class="main-nav-span">Total Space Used: total_space_used %> GB</span> -->
        </div>


<!-- FILE SHARE TEMPLATE -->
        <div class="fileshare-page portal-only" style="display:inline-block; width:100%;">
            <!-- <a href="/"><img src="/images/logo_loginScreen.png"/></a> -->
            <% if( mimetype == "text/html" || mimetype == "image/jpeg" || mimetype == "video/mp4" || mimetype == "video/3gpp" || mimetype == "audio/mp3" || mimetype == "audio/mpeg" || mimetype == "application/pdf" ){ %> 
                <div class="" style="width: 70% ! important; overflow-y: auto;overflow-x: hidden; float: left; display: inline-block;">
                    <div id="testLoad"></div>
                </div>
            <% } %>
            <div class="file-sharepage-outlet" fsname="<%- fsName %>" fileid="<%- fileid %>" filename="<%- name %>" dtoken="<%- dtoken %>" style="width: <% if( mimetype == "text/html" || mimetype == "image/jpeg" || mimetype == "video/mp4" || mimetype == "video/3gpp" || mimetype == "audio/mp3" || mimetype == "audio/mpeg" || mimetype == "application/pdf" ){ %>26<% }else{ %>96<% } %>% ! important; padding: 2%; overflow: auto; float: right; display: inline-block;">

                <div class="file-sharepage-template" style="display: block; text-align: center;">
                    <!-- <fieldset class="footer clearfix"> -->
                        <div class=""><b><%- name %></b></div>
                        <input id ="download-shared-file-button" type="button" value="Download"/>
                    <!-- </fieldset> -->
                </div>

                <!-- <iframe src="https://localhost/file/open/<%- fileid %>/<%- name %>"></iframe> -->
            </div>
        </div>
<!-- FILE SHARE TEMPLATE END -->



                <div id="content" style="background-color:<%= body_background %>"></div>
                <div class="push"></div>

            </div>

            <!-- footer -->
            <div id="footer" class="portal-only clearfix" style="background-color:<%= footer_background %>">

                <!-- Domain Information -->
                <div id="domaininfo" style="display:none;"><%= sails.config.host %></div>
                <div id="emailservice" style="display:none;"><%= sails.config.mailService %></div>
                <div id="mandrillkey" style="display:none;"><%= sails.config.mandrillApiKey %></div>
                <div id="smtphost" style="display:none;"><%= (typeof sails.config.smtpDetails != 'undefined')?sails.config.smtpDetails.host:'' %></div>
                <div id="smtpport" style="display:none;"><%= (typeof sails.config.smtpDetails != 'undefined')?sails.config.smtpDetails.port:'' %></div>
                <div id="smtpuser" style="display:none;"><%= (typeof sails.config.smtpDetails != 'undefined')?sails.config.smtpDetails.user:'' %></div>
                <div id="smtppass" style="display:none;"><%= (typeof sails.config.smtpDetails != 'undefined')?sails.config.smtpDetails.pass:'' %></div>
                <div id="trashopt" style="display:none;"><%= (typeof sails.config.trash_setting != 'undefined')?sails.config.trash_setting:'' %></div>
                <div id="trashoptdays" style="display:none;"><%= (typeof sails.config.trash_setting_days != 'undefined')?sails.config.trash_setting_days:'' %></div>
                <script type="text/javascript">
                    /*console.log(sails_config.express);
                    console.log(sails_config.session);
                     sails_config.express = null %>
                     sails_config.session = null %>
                    sailsConfig = JSON.parse(JSON.parse(JSON.stringify($('<div/>').html(" (JSON.stringify(sails_config))%>").text())));*/
                    // console.log(sailsConfig);
                </script>

                <div id="copyright-info">
                    <img id="footer-logo" class="footer-logo-class" src="/images/Branding_12.png" />
                    <span class="copyright-info"><%= sails.config.organization.copyright %></span>
                </div>
                <ul id="terms-policies" class="clearfix">
                    <li><a target="_blank" href="<%= sails.config.organization.links.termsOfUse %>">Terms of Use</a>|</li>
                    <li><a target="_blank" href="<%= sails.config.organization.links.privacyPolicy %>">Privacy Policy</a>|</li>
                    <li class="last-item"><a target="_blank" href="<%= sails.config.organization.links.help %>">Help</a></li>
                </ul>
            </div>

            <script type="text/javascript">

                console.log('mimetype: <%- mimetype %>');
                var file_url = 'https://<%- sails.config.host %>/file/pPreview/<%- dtoken %>/<%- fileid %>/<%- name %>';
                <% if(mimetype == "text/html"){ %>
                    $("#testLoad").load(file_url);
                <% }else if(mimetype == "image/jpeg" || mimetype == "image/png" ){ %>
                    $("#testLoad").html('<img src="'+file_url+'" style="width:100%;" />');
                <% }else if(mimetype == "video/mp4" || mimetype == "video/3gpp" || mimetype == "audio/mp3" || mimetype == "audio/mpeg" ){ %>
                    $("#testLoad").html('<video width="100%" controls="controls"><source src="'+file_url+'" type="video/mp4" />Bummer, your  browser does not support the video tag.</video>');
                <% }else if(mimetype == "application/pdf"){ %>
                    $("#testLoad").html('<object data="'+file_url+'" type="application/pdf" width="100%" height="100%"><p>Alternative text - include link <a href="'+file_url+'">to the PDF!</a></p></object>');
                <% } %>
                Mast.raise({
                    // Before router is instantiated and routes are run
                    beforeRouteFn: function() {

                        // Create global app object if we are on a mobile device.
                        if (Mast.isMobile) {
                            // Olympus = {
                            //  mobileApp: new Mast.components.LoginMobile()
                            // };

                            // Login page
                            $(".login-page").remove();
                            
                        } else {
                            new Mast.components.FileSharePageComponent({outlet: '.file-sharepage-outlet'});
                            /*Olympus = {
                                ui: {
                                    fileSystem: new Mast.components.SuperAdmin({
                                        outlet: '#content'
                                    }),
                                    actionBar: new Mast.components.UploadSearchComponent(),
                                    userNavigation: new Mast.components.UserNavigationComponent()
                                },
                                util: {
                                    dropdownHelper: Mast.DropdownHelper
                                },
                                //isPrivateDeployment: < % - sails.config.privateDeployment % >
                            };*/
                        }
                    }
                });
            </script>

            <!-- Template library -->
            <%- rigging.templateLibrary %>
    </body>


    <% if(navigation_color!=='#4f7ba9'){ %>
    <script type="text/javascript">
        $('.upload-search-template').css({
            'background': "<%=navigation_color %>"
        });
    </script>
    <% } %>

    <% if(body_background!=='#f9f9f9'){ %>
    <script type="text/javascript">
        $('.listusers-outlet, .log-outlet, .dropdownActions-outlet').css({'background': "<%=body_background %>"});
    </script>
    <% } %>

    <% if(font_color!=='#547aa4'){ %>

    <script type="text/javascript">
        $('body').css({'color': "<%=font_color %>"});
        $('a').css({'color': "<%=font_color %>"});
        $('p, label, span').css({'color': "<%=font_color %>"});
        $('h1, h2, h3, h4, h5, h6').css({'color': "<%=font_color %>"});
    </script>       
    <%  } %>


    <% if(font_family !== 'ProzimanovaRegular, Helvetica, Ariel, sans-serif'){ %>

    <script type="text/javascript">
        $("body, p, a, h1, h2, h3, h4, h5, h6, label, span").css({'font-family': "<%=font_family %>"});
    </script>       

    <%  } %>

    <script type="text/javascript">
        $(".upload-file").hide();
    </script>       

</html>
